{% extends 'base.html.twig' %}

{% block title %}Hello ProductsController!{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <div class="products-grid grid grid-cols-3 gap-4">
        {% for product in products %}
            <div class="product max-w-sm rounded overflow-hidden shadow-lg">
                <a href="/p/{{ product.id }}">
                    <h2 class="font-bold text-xl mb-2 px-6 py-4">{{ product.name }}</h2>
                    <p class="text-gray-700 text-base px-6 py-4">{{ product.price }} €</p>
                </a>
                <a href="/p/{{ product.id }}" class="btn">Voir Détails</a>
                <form action="/shopping/cart/{{ product.id }}" method="post">
                    <button type="submit" class="btn-add-cart">Ajouter au panier</button>
                </form>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
