{% extends 'base.html.twig' %}

{% block title %}Hello ShoppingCartController!{% endblock %}

{% block body %}
{{dump()}}
<div class="container mx-auto p-4">
    <h2 class="text-2xl font-bold mb-4">Votre Panier</h2>
    {% if shopping_cart is not empty %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">

            {% for order in shopping_cart %}
                <div class="max-w-sm rounded overflow-hidden shadow-lg p-4">
                    <h3 class="font-bold text-xl mb-2">Commande #{{ order.id }}</h3>
                    <p>Date : {{ order.date|date('d/m/Y') }}</p>
                    <p>Total : {{ order.total }}</p>

                    <a href="{{ path('order_details', {'id': order.id}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Voir DÃ©tails
                    </a>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}
</div>
{% endblock %}